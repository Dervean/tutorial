{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "importHelpers": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "types": [
      "@types/node",
      "webpack-env"
    ],
    "baseUrl": ".",
    "paths": {
      "@example-dyna/*": ["./packages/example-dyna/*"],
      "@example-mara/*": ["./packages/example-mara/src/*"]
    }
  },
  "exclude": ["node_modules"]
}
